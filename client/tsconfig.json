{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "node",
    "types": ["jest", "node"]  // Ensure Jest types are included
  },
  "include": [
    "src/**/*.ts",          // Include .ts files in src
    "src/**/*.tsx",         // Include .tsx files in src
    "src/tests/**/*.ts", // Include .ts files in client/tests
    "src/tests/**/*.tsx",// Include .tsx files in client/tests
    "src/setupTests.ts"         // Ensure setupTests.ts is included
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
